<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.demo.screencapture.MainActivity">

  <TextView
      android:text="循环截图!"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      android:id="@+id/pic_path_url"
      android:text=""
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/show_device_info_phone"
      android:layout_width="wrap_content"
      android:text="电话号码写入文件"
      android:layout_height="40dp" />
  <Button
      android:id="@+id/show_device_info_read_sms"
      android:layout_width="wrap_content"
      android:text="短信写入文件"
      android:layout_height="40dp" />
  <Button
      android:id="@+id/show_device_info_read_configure"
      android:layout_width="wrap_content"
      android:text="从文件读配置开关"
      android:layout_height="40dp" />
  <TextView
      android:id="@+id/service_configure_tv"
      android:text=""
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:id="@+id/show_device_info_sys"
      android:layout_width="wrap_content"
      android:text="设备信息写入文件"
      android:layout_height="40dp" />

  <Button
      android:id="@+id/show_device_info_gps"
      android:layout_width="wrap_content"
      android:text="Sysytem gps"
      android:layout_height="40dp" />
  <Button
      android:id="@+id/show_device_info_install_app"
      android:layout_width="wrap_content"
      android:text="全部APP"
      android:layout_height="40dp" />
  <Button
      android:id="@+id/show_device_info_cpu_log"
      android:layout_width="wrap_content"
      android:text="cpu log"
      android:visibility="gone"
      android:layout_height="40dp" />

</LinearLayout>
